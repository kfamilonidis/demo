<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <% if (params[:page] && params[:page]).to_i < 2 %>
      <li class="page-item disabled">
        <span class="page-link">Previous</span>
      </li>
    <% else %>
      <li class="page-item">
        <%= link_to 'Previous', url_for(page: (params[:page] || 2).to_i  - 1), class: "page-link" %>
      </li>
    <% end %>

    <% paginator.each_page do |page| %>
      <% if page %>
        <% if page == current_page %>
          <li class="page-item active">
            <span class="page-link"><%= page %></span>
          </li>
        <% else %>
          <li class="page-item">
            <%= link_to page, url_for(page: page), class: "page-link" %>
          </li>
        <% end %>
      <% else %>
        <li class="page-item disabled">
          <span class="page-link">â€¦</span>
        </li>
      <% end %>
    <% end %>

    <% if false && paginator.last_page? %>
      <li class="page-item disabled">
        <span class="page-link">Next</span>
      </li>
    <% else %>
      <li class="page-item">
        <%= link_to 'Next', url_for(page: (params[:page] || 0).to_i + 1), class: "page-link" %>
      </li>
    <% end %>
  </ul>
</nav>
